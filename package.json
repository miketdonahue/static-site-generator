{
  "name": "static-site-generator",
  "version": "1.0.0",
  "description": "A custom static site generator using Handlebars",
  "author": "Mike Donahue",
  "license": "MIT",
  "scripts": {
    "build": "export NODE_ENV=production && yarn folder-loader && yarn image-loader && yarn sass-loader && yarn js-loader && yarn hbs-loader",
    "build:dev": "export NODE_ENV=development && yarn folder-loader && yarn image-loader && yarn sass-loader && yarn js-loader && yarn hbs-loader",
    "start": "yarn build && light-server --config prod-server.json",
    "start:dev": "yarn build:dev && light-server --config dev-server.json",
    "folder-loader": "node loaders/folder-loader/folder-loader.js",
    "hbs-loader": "node loaders/hbs-loader/hbs-loader.js",
    "image-loader": "node loaders/image-loader/image-loader.js",
    "js-loader": "node loaders/js-loader/js-loader.js",
    "sass-loader": "node loaders/sass-loader/sass-loader.js"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "compressing": "^1.2.3",
    "config": "^1.30.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "handlebars-layouts": "^3.1.4",
    "js-beautify": "^1.7.5",
    "json-format": "^1.0.1",
    "jumpstart-css": "https://github.com/sidewalksalsa/jumpstart-css.git",
    "light-server": "^2.5.0",
    "markdown-it": "^8.4.1",
    "md5-file": "^3.2.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.8.3",
    "rimraf": "^2.6.2",
    "svgo": "^1.0.5",
    "uglify-js": "^3.3.22"
  }
}
